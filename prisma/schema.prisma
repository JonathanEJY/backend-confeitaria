generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  uuid         String   @id @default(uuid())
  id           Int      @default(autoincrement())
  username     String
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  labor Labor? @relation

  products Product[] @relation

  stock   Stock?   @relation
  recipes Recipe[] @relation

  @@map("users")
}

model Labor {
  uuid String @id @default(uuid())

  desiredSalary    Float
  workDaysPerMonth Int
  workHoursPerDay  Float

  electricity Float? @default(0)
  water       Float? @default(0)
  rent        Float? @default(0)
  wage        Float? @default(0)

  gas      Float? @default(0)
  internet Float? @default(0)
  other    Float? @default(0)

  userId String @unique
  user   User   @relation(fields: [userId], references: [uuid], onDelete: Cascade)

  @@map("labor")
}

enum Unit {
  g
  kg
  ml
  L
  un
}

model Product {
  uuid      String   @id @default(uuid())
  id        Int      @default(autoincrement())
  name      String
  unit      Unit
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [uuid], onDelete: Cascade)

  stockProducts     StockProduct[]
  recipeIngredients RecipeIngredient[]

  @@map("products")
}

model StockProduct {
  uuid      String    @id @default(uuid())
  quantity  Decimal   @default(0) @db.Decimal(9, 2)
  lot       String?
  expiresAt DateTime?
  costPrice Decimal   @db.Decimal(9, 2)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  productId String
  product   Product @relation(fields: [productId], references: [uuid], onDelete: Cascade)

  stockId String
  stock   Stock  @relation(fields: [stockId], references: [uuid], onDelete: Cascade)

  @@index([productId])
  @@index([stockId])
  @@map("stock_products")
}

model Stock {
  uuid      String   @id @default(uuid())
  id        Int      @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [uuid], onDelete: Cascade)
  userId String @unique

  stockProducts StockProduct[]

  @@map("stocks")
}

model Recipe {
  uuid      String   @id @default(uuid())
  id        Int      @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  yield     Decimal @db.Decimal(9, 2)
  yieldUnit Unit

  prepTimeMinutes Int @default(0)

  ingredientsCost Decimal @default(0) @db.Decimal(9, 2)
  laborCost       Decimal @default(0) @db.Decimal(9, 2)
  packagingCost   Decimal @default(0) @db.Decimal(9, 2)
  totalCost       Decimal @default(0) @db.Decimal(9, 2)

  profitMargin   Decimal? @db.Decimal(5, 2)
  suggestedPrice Decimal? @db.Decimal(9, 2)

  userId String
  user   User   @relation(fields: [userId], references: [uuid], onDelete: Cascade)

  ingredients RecipeIngredient[]

  @@map("recipes")
}

model RecipeIngredient {
  uuid     String  @id @default(uuid())
  quantity Decimal @db.Decimal(9, 2)

  unitCost  Decimal @db.Decimal(9, 2)
  totalCost Decimal @db.Decimal(9, 2)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  recipeId String
  recipe   Recipe @relation(fields: [recipeId], references: [uuid], onDelete: Cascade)

  productId String
  product   Product @relation(fields: [productId], references: [uuid], onDelete: Cascade)

  @@unique([recipeId, productId])
  @@index([recipeId])
  @@index([productId])
  @@map("recipe_ingredients")
}
